@model DevLiftNew.Pages.IHKQuiz.Frage5Model
@{
    ViewData["Title"] = "Frage 5 - Komplexe Logik mit Methoden & Bedingungen";
}

<h2>Frage 5 - Komplexe Logik mit Methoden & Bedingungen</h2>

<div class="card p-3 shadow-sm">
    <p><strong>Was gibt der folgende C#-Code in der Konsole aus?</strong></p>
    
    <pre><code>public class Program
{
    public static void Main()
    {
        int result = Berechne(3, 4);
        Console.WriteLine(result);
    }

    public static int Berechne(int a, int b)
    {
        if (a > b)
        {
            return a - b;
        }
        else if (a == b)
        {
            return a * b;
        }
        else
        {
            int summe = 0;
            for (int i = a; i < b; i++)
            {
                if (i % 2 == 0)
                {
                    continue;
                }
                summe += i;
            }
            return summe;
        }
    }
}</code></pre>
